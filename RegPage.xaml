<Page x:Class="КурсС4.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:КурсС4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        
        <StackPanel Orientation="Vertical">
            <TextBlock Grid.ColumnSpan="4" Text="ООО Медиа Центр" FontSize="30" FontFamily="Calibri" FontStyle="Italic" Grid.Row="0" Background="YellowGreen"/>
            <TextBlock Text="Регистрация" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"  Grid.Row="1" />
            <TextBlock Text="Логин" HorizontalAlignment="Center" Margin="-140 0 0 0"></TextBlock>
            <TextBox Name="Login"></TextBox>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" Margin="-140 0 0 0"></TextBlock>
            <PasswordBox Name="Password"></PasswordBox>
            <Button Click="Button_Click" Content="Зарегистрироваться"></Button>
        </StackPanel>
    </Grid>
</Page>
